    <script>
      document.addEventListener('DOMContentLoaded', function () {
        const filterScroll = document.getElementById('filter-scroll');
        const leftArrow = document.getElementById('left-arrow');
        const rightArrow = document.getElementById('right-arrow');
        const filterContainer = document.querySelector('.filter-container');

        // Function to check scroll position and update left arrow visibility
        function checkScrollPosition() {
          // Show/hide left arrow based on scroll position
          if (filterScroll.scrollLeft > 0) {
            leftArrow.classList.add('active');
          } else {
            leftArrow.classList.remove('active');
          }
        }

        // Show right arrow only on hover
        filterContainer.addEventListener('mouseenter', function() {
          // Only show if there's more content to scroll to
          const maxScrollLeft = filterScroll.scrollWidth - filterScroll.clientWidth - 10;
          if (filterScroll.scrollLeft < maxScrollLeft) {
            rightArrow.classList.add('active');
          }
        });

        // Hide right arrow when not hovering
        filterContainer.addEventListener('mouseleave', function() {
          rightArrow.classList.remove('active');
        });

        // Scroll left when left arrow is clicked
        leftArrow.addEventListener('click', function () {
          filterScroll.scrollBy({
            left: -150,
            behavior: 'smooth'
          });
        });

        // Scroll right when right arrow is clicked
        rightArrow.addEventListener('click', function () {
          filterScroll.scrollBy({
            left: 150,
            behavior: 'smooth'
          });
        });

        // Check scroll position when scrolling
        filterScroll.addEventListener('scroll', checkScrollPosition);

        // Check scroll position when window is resized
        window.addEventListener('resize', checkScrollPosition);

        // Initial check
        checkScrollPosition();
      });

      //----------------------------------------------------------------------------------------------------------------------------//
      // TOGGEL SWITCH //

      const taxSwitch = document.getElementById('flexSwitchCheckDefault');
      taxSwitch.addEventListener('click', () => {
       
        const taxInfo = document.querySelectorAll('.tax-info');
        taxInfo.forEach((element) => {
          if (taxSwitch.checked) {
            element.style.display = 'inline';
          } else {
            element.style.display = 'none';
          }
        });
      })
    </script>
