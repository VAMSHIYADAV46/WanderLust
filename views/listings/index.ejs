    .filter-container {
      position: relative;
      padding: 10px 0;
      max-width: 76%;
      /* margin: 0 auto; */
    }

    .icon-container {
      display: flex;
      align-items: center;
      width: 100%;
    }

    .filter-scroll {
      display: flex;
      gap: 20px;
      overflow-x: auto;
      scroll-behavior: smooth;
      padding: 10px;
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* IE and Edge */
      min-height: 80px;
      /* Minimum height */
      align-items: center;
    }

    .filter-scroll::-webkit-scrollbar {
      display: none;
