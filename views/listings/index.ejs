      font-size: 20px;
      margin-bottom: 2px;
    }

    .filter-item i {
      font-size: 24px;
      margin-bottom: 5px;
    }

    .filter-item p {
      font-size: 0.8rem;
    }

    .arrow-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      width: 36px;
      height: 36px;
      border-radius: 50%;
      background-color: #333;
      color: white;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      z-index: 10;
      transition: all 0.3s ease;
      opacity: 0;
      pointer-events: none;
    }

    .arrow-btn.active {
      opacity: 1;
      pointer-events: auto;
    }

    .arrow-btn:hover {
      background-color: #555;
    }

    .left-arrow {
      left: 5px;
      margin-bottom: 3px;
    }

    .right-arrow {
      right: 5px;
      margin-bottom: 3px;
    }

    #right-arrow {
      margin-bottom: 1rem;
    }

    #left-arrow {
      margin-bottom: 1rem;
    }

    .switch-toggel{
      margin-bottom: 1rem;
      font-size: 1rem;
      margin-left: 2.5rem;
      border: 1.8px solid black;
      height: 3.5rem;
      border-radius: 1rem;
      padding: 1rem;
    }

    .tax-info{
      display: none;
    }

    .rightArrow{
      display: block;
    }
  </style>

