    .footer-logo {
        margin-bottom: 20px;
    }

    .footer-logo img {
        height: 40px;
        border-radius: 50%;
        background-color: #ff4757;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-bottom: 20px;
    }

    .social-icon {
        width: 40px;
        height: 40px;
        background-color: #333;
        color: white;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: background-color 0.3s;
    }

    .social-icon:hover {
        background-color: #ff4757;
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 20px;
    }

    .footer-links a {
        color: #666;
        transition: color 0.3s;
    }

    .footer-links a:hover {
        color: #ff4757;
    }

    .copyright {
        margin-top: 20px;
        color: #666;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
        .about-container {
            grid-template-columns: 1fr;
        }

        .about-image {
            order: -1;
        }
    }

    @media (max-width: 768px) {
        nav {
            flex-wrap: wrap;
        }

        .logo {
            margin-bottom: 10px;
        }

        .search-container {
            order: 3;
            margin: 15px 0;
            width: 100%;
            max-width: none;
        }

        .hero h1 {
            font-size: 2.5rem;
        }

        .hero-buttons,
        .cta-buttons {
            flex-direction: column;
            gap: 15px;
        }

        .btn {
            width: 100%;
        }
    }

    @media (max-width: 576px) {

        .nav-links,
        .auth-links {
            width: 100%;
            justify-content: space-between;
        }

        .hero h1 {
            font-size: 2rem;
        }

        .hero {
            height: 400px;
        }

        .destinations-grid {
            grid-template-columns: 1fr;
        }

        .section-title {
            font-size: 2rem;
        }
    }

    /* Icon Styling */
    .fa-compass {
        color: #fe424d;
        font-size: 2rem;
    }
</style>
