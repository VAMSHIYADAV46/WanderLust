        margin: 0 20px;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .search-container input {
        flex: 1;
        padding: 10px 15px;
        border: none;
        outline: none;
        font-size: 14px;
    }

    .search-btn {
        background-color: #ff4757;
        color: white;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        font-weight: 500;
        transition: background-color 0.3s;
    }

    .search-btn:hover {
        background-color: #ff3040;
    }

    .auth-links {
        display: flex;
        gap: 15px;
    }

    .signup-link,
