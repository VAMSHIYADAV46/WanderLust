    .about-btn:hover {
        background-color: #ff3040;
        transform: translateY(-2px);
    }



    /* How It Works */
    .how-it-works {
        padding: 80px 5%;
        max-width: 1200px;
        margin: 0 auto;
        text-align: center;
    }

    .steps-container {
        display: flex;
        justify-content: space-between;
        margin-top: 50px;
        gap: 20px;
    }

    .step-card {
        background-color: white;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s;
        flex: 1;
        min-width: 0;
        /* Prevents flex items from overflowing */
    }

    .step-card:hover {
        transform: translateY(-10px);
    }

    .step-icon {
        width: 70px;
        height: 70px;
        background-color: #ff4757;
        color: white;
        border-radius: 50%;
