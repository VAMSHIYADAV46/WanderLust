        color: inherit;
    }

    img {
        max-width: 100%;
        height: auto;
    }

    /* Navigation Bar */
    header {
        background-color: #fff;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    nav {
        display: flex;
        height: 5rem;
        justify-content: space-between;
        align-items: center;
        padding: 15px 5%;
