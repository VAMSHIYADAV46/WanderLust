<% layout('/layouts/boilerplate') -%>

  <body>
    <div class="row">
      <div class="col-8 offset-2">
        <h3>Create a New Listing</h3>
        <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">

          <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Enter title" type="text" id="title" class="form-control"
              required />
            <div class="valid-feedback">Looks good!</div>
            <div class="invalid-feedback">Please enter a title.</div>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" placeholder="Enter description" id="description" class="form-control"
              required></textarea>
            <div class="valid-feedback">Nice description!</div>
            <div class="invalid-feedback">Please enter a description.</div>
          </div>



          <div class="mb-3">
            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" placeholder="Select Image" type="file" id="image" class="form-control"
              required />
            <div class="valid-feedback">Image looks good!</div>
          </div>

          <div class="row">
            <div class="mb-3 col-md-4">
              <label for="price" class="form-label">Price</label>
              <input name="listing[price]" placeholder="Enter price" type="number" id="price" class="form-control"
                required />
              <div class="valid-feedback">Great price!</div>
              <div class="invalid-feedback">Please enter a price.</div>
            </div>

            <div class="mb-3 col-md-4">
              <label for="country" class="form-label">Country</label>
              <input name="listing[country]" placeholder="Enter country" type="text" id="country" class="form-control"
                required />
              <div class="valid-feedback">Country looks good!</div>
              <div class="invalid-feedback">Please enter a country.</div>
            </div>

            <!-- In your create form -->
            <div class="mb-3 col-md-4">
              <label for="category" class="form-label">Category</label>
              <select class="form-select" id="category" name="listing[category]" required>
                <option value="" selected disabled>Select a category</option>
                <option value="trending">Trending</option>
                <option value="rooms">Rooms</option>
                <option value="hill stations">Hill Stations</option>
                <option value="mountains">Mountains</option>
                <option value="beaches">Beaches</option>
                <option value="camping">Camping</option>
                <option value="luxury resorts">Luxury Resorts</option>
                <option value="forests">Forests</option>
                <option value="farms">Farms</option>
                <option value="heritage">Heritage</option>
                <option value="snow places">Snow Places</option>
                <option value="rivers">Rivers</option>
                <option value="adventure">Adventure</option>
                <option value="treehouse">Treehouse</option>
                <option value="castles">Castles</option>
              </select>
            </div>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]" placeholder="Enter location" type="text" id="location" class="form-control"
              required />
            <div class="valid-feedback">Location looks good!</div>
            <div class="invalid-feedback">Please enter a location.</div>
          </div>

          <button class="btn submit-button">Add</button>

          <button type="button" class="btn back-button" onclick="window.location.href='/listings'">Back</button>

        </form>
      </div>
    </div>
    <br>
  </body>